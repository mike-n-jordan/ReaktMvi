<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/counter_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/add_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add one"/>

    <Button
        android:id="@+id/add_one_slow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Slow add one"/>

    <Button
        android:id="@+id/remove_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove one"/>

    <Button
        android:id="@+id/remove_one_slow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Slow remove one"/>

    <Button
        android:id="@+id/start_playback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start playback"/>

</LinearLayout>